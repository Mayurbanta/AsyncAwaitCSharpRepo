<Window x:Class="AsyncVoidIsBad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncVoidIsBad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Button Content="Process" x:Name="btnProcess" Click="btnProcess_Click" 
                Height="50" Width="140" FontSize="30" Margin="10"/>
        <TextBlock x:Name="textBlockStatus" Text="status" HorizontalAlignment="Center"  Margin="10" FontSize="30"/>
    </StackPanel>
</Window>
